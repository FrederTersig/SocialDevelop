        <servlet-class> Servlets.SkillProgetto </servlet-class>
    </servlet>
    
    <servlet-mapping>
        <servlet-name> SkillProgetto </servlet-name>
        <url-pattern> /skillprogetto </url-pattern>
    </servlet-mapping>
    
           <!-- TASK DA AGGIUNGERE DURANTE LA CREAZIONE DEL PROGETTO -->
