        <servlet-name> TaskSkillProgetto </servlet-name>
        <servlet-class> Servlets.TaskSkillProgetto </servlet-class>
    </servlet>
    
    <servlet-mapping>
        <servlet-name> TaskSkillProgetto </servlet-name>
